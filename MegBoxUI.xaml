<Window x:Class="WpfApp2__.NET_Framework_.MegBoxUI"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2__.NET_Framework_"
        mc:Ignorable="d"
        Title="MegBoxUI"
        Height="300"
        Width="300"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">
    
    <Border CornerRadius="12" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height=".4*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0" Grid.RowSpan="2" Background="Transparent">
                <Border Background="Blue" Margin="0 90 0 15"></Border>
                <Border CornerRadius="99" Width="50" Height="50" Background="Red" Margin="0 0 0 120"></Border>
            </Grid>

            <!--<Border Grid.Row="0" Background="White"></Border>-->
            <TextBlock Grid.Row="0" Text="Success" Background="White" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>

        </Grid>
    </Border>
    
</Window>
